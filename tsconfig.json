{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "es2015",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "const": [
                "./const"
            ],
            "utils": [
                "./utils"
            ]
        },
        "lib": [
            "es5",
            "es2017",
            "es2015",
            "es2017.typedarrays"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "exclude": "test",
        "theme": "default",
        "ignoreCompilerErrors": true,
        "excludePrivate": true,
        "excludeNotExported": true,
        "target": "ES5",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "stripInternal": true,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs"
    }
}