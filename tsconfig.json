{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "abi": ["abi/index.ts"],
            "account": ["account/index.ts"],
            "accountBlock": ["accountBlock/index.ts"],
            "client": ["client/index.ts"],
            "communication": ["communication/index.ts"],
            "constant": ["constant/index.ts"],
            "error": ["error/index.ts"],
            "hdAccount": ["hdAccount/index.ts"],
            "hdAddr": ["hdAddr/index.ts"],
            "keystore": ["keystore/index.ts"],
            "netProcessor": ["netProcessor/index.ts"],
            "privToAddr": ["privToAddr/index.ts"],
            "utils": ["utils/index.ts"],
            "vitejs": ["vitejs/index.ts"],
            "WS": ["WS/index.js"],
            "HTTP": ["HTTP/index.js"],
            "IPC": ["IPC/index.js"]
        },
        "lib": [
            "es5",
            "es2017",
            "es2015",
            "es2017.typedarrays"
        ],
        "outDir": "./packages/vitejs/es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}