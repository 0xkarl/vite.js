{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "es2015",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "const": [
                "./const"
            ],
            "utils": [
                "./utils"
            ]
        },
        "lib": [
            "es5",
            "es2017",
            "es2015",
            "es2017.typedarrays"
        ]
    },
    "include": [
        "src/**/*",
        "utils/**/*",
        "libs/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}